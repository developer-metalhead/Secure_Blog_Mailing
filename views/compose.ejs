
<%- include("partials/headerblog"); -%>
    <h1 style="color: #b81d24;">Compose</h1>
    <form class="" action="/compose" method="post" style="font-size: 2rem;
    color: #f5f5f1;
    background-color: #221f1f;
    padding: 12px;
    margin-top: 18px;
    box-shadow: 10px 10px 5px #b81d24;" >
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle">
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
      </div>
      <button type="submit" class="btn btn-dark"  style="margin-top: 15px; font-size: 2rem; margin-bottom: 15px;
      color: #f5f5f1;
      background-color: #b81d24;
      padding: 12px;
      margin-top: 18px;">Publish</button>
    </form>

<%- include("partials/footerblog"); -%>
