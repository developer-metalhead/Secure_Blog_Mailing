<%- include('partials/headersecret') %>
<div class="container mt-5">
  <h1 style="color: #b81d24;">Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card" style=" font-size: 2rem;
      color: #f5f5f1;
      background-color: #221f1f;
      padding: 12px;
      margin-top: 18px;
      box-shadow: 10px 10px 5px #b81d24;">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark"  style="box-shadow: 7px 7px 5px #b81d24; color:#f5f5f1;">Register</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card social-block"  style=" font-size: 2rem;
      color: #f5f5f1;
      background-color: #221f1f;
      padding: 12px;
      margin-top: 18px;
      box-shadow: 10px 10px 5px #b81d24;">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button" style="box-shadow: 5px 5px 5px #564d4d";>
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </div>
      </div>
    </div>
    

  </div>
</div>

<%- include('partials/headersecret') %>
